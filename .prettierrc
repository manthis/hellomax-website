{
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "plugins": ["prettier-plugin-tailwindcss"],
    "overrides": [
        {
            "files": ["*.js", "*.ts", "*.tsx", "*.jsx"],
            "options": {
                "printWidth": 120,
                "singleQuote": true,
                "jsxSingleQuote": true,
                "trailingComma": "all",
                "bracketSpacing": true,
                "bracketSameLine": true,
                "arrowParens": "always"
            }
        }
    ]
}
